@model SimpleBudget.Web.Models.Categories.IndexModel

<style>
    table.categories th:nth-child(2),
    table.categories td:nth-child(2) {
        text-align: center;
    }

    table.categories th:nth-child(3),
    table.categories td:nth-child(3) {
        width: 100px;
    }
</style>

<div class="card">
    <div class="card-header">
        <h5>Categories <small>(@Model.Items.Count)</small></h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="text-end pb-3">
                    <a href="/dictionaries/categories/add" class="btn btn-secondary">
                        <i class="bi-plus-circle"></i>
                        Add Category
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <table class="table table-striped categories">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Payments</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.PaymentCount
                                </td>
                                <td>
                                    <a href="/dictionaries/categories/edit?id=@item.CategoryId" title="Edit" class="btn btn-link">
                                        <i class="bi-pencil"></i>
                                    </a>
                                    <a href="/dictionaries/categories/remove?id=@item.CategoryId" title="Remove" class="btn btn-link">
                                        <i class="bi-x-lg"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>